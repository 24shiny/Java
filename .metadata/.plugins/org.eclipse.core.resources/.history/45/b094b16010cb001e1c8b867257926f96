package Ch6;

import java.util.Arrays;

public class Matrix {
	
	private int[][] newArray;
	private int[][] sumArray;
	private int[][] prodArray;
	private int row;
	private int col;
	
	public Matrix(int[][] array) {
		
	}
	
	public Matrix(int array[], int start, int row, int col) {
		this.newArray = new int[row][col];
		this.row = row;
		this.col = col;
		Arrays.sort(array);
		for(int i=0; i<row;i++) {
			for(int j=0; j<col;j++) {
				this.newArray[i][j] = array[start+4*i+j];
			}
		}
	}
	
	public void print() {
		System.out.println(Arrays.deepToString(newArray));
	}
	
	public void sum(Matrix mA, Matrix mB){
		int row = mA.newArray.length;
		int col = mB.newArray[0].length;
		for(int i=0;i<row;i++) {
			for(int j=0;j<col;j++) {
				this.++[i][j] = array1[i][j] + array2[i][j];
			}
		}
	}
	
	public int[][] getArray(){
		return newArray;
	}
}